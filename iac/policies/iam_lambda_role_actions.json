{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowDynamoDB",
            "Action": [
                "dynamodb:*"
            ],
            "Effect": "Allow",
            "Resource": "${dynamodb_arn}"
        },
        {
            "Action": [
                "logs:PutLogEvents",
                "logs:CreateLogStream",
                "logs:CreateLogGroup"
            ],
            "Effect": "Allow",
            "Resource": [
                "${lambda_log_group}",
                "${lambda_log_group_all}"
            ],
            "Sid": "AllowCloudwatchLogging"
        }
    ]
}