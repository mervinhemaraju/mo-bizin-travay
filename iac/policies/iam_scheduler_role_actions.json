{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowDynamoDB",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Effect": "Allow",
            "Resource": "${lambda_arn}"
        },
        {
            "Sid": "AllowIamPassRole",
            "Action": [
                "iam:PassRole"
            ],
            "Effect": "Allow",
            "Resource": "${iam_arn}"
        }
    ]
}